<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fichafamiliar.CambioPassword" android:background="#FFFFFF">

    

        

            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                
                <ImageButton
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="175dp"
                android:layout_gravity="top"
                android:background="#FFFFFF"
                android:contentDescription="@string/desc"
                android:src="@drawable/ficha_banner" />
                
                <TextView
                        android:id="@+id/titulo_accion_usuario"
                        android:layout_width="wrap_content"                        
                        android:layout_height="80dp"                                                
                        android:background="#FFFFFF"
                        android:layout_gravity="center"
                        android:text="@string/cambiar_password"
                        android:textColor="#011254"
                        android:textSize="21sp"
                        android:textStyle="bold" 
                        />
                
                <TextView
                        android:id="@+id/titulo_clave_antigua_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"                        
                        android:background="#FFFFFF"
                        android:text="@string/password_antigua"
                        android:textColor="#011254" />

                    <EditText
                        android:id="@+id/claveusuarioantigua"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:maxLength="20"
                        android:password="true" 
                        android:singleLine="true"
                        android:lines="1"/>
                
                <TextView
                        android:id="@+id/titulo_clave_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"                        
                        android:background="#FFFFFF"
                        android:text="@string/password_nuevo"
                        android:textColor="#011254" />

                    <EditText
                        android:id="@+id/claveusuarioeditar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:maxLength="20"
                        android:password="true" 
                        android:singleLine="true"
                        android:lines="1"/>
                

                    <TextView
                        android:id="@+id/titulo_confirmacion_clave_usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="#FFFFFF"
                        android:text="@string/password_confirme_nuevo"
                        android:textColor="#011254" />

                    <EditText
                        android:id="@+id/confirmacion_claveeditar"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:maxLength="20"
                        android:password="true" 
                        android:singleLine="true"
                        android:lines="1"/>
                    
                    <ImageButton
		                android:id="@+id/imgbutton1"
		                android:layout_width="210dp"
		                android:layout_height="130dp"
		                android:layout_weight="3.79"
		                android:layout_gravity="center"
		                android:background="#FFFFFF"
		                android:onClick="funcion_cambiar_password"
		                android:src="@drawable/save" />
            </LinearLayout>
	
</FrameLayout>
